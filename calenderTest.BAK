    <style>
        a {
            text-decoration: none;
        }


		.header{
		  display:flex;
		}
		.header-nav{
		  display:flex;
		  margin-left:auto;
		}
		.key{
		  height:100px;
		  display:flex;
		  justify-content: center;
		  align-items: center;
		}
		.column{
		  display: flex;
		  flex-wrap: wrap;
		  align-content: space-around;
		}
		.col{
		  width:30%;
		}




		/* カレンダー用CSS */
		.calendar-wrap {
			width:58rem;
			background: #eee;
			color: #333;
		}
		.calender_head {
			line-height: 60px;
			text-align: center;
			font-size: 2rem;
		}
		.calender_center {
			width:40%;
			text-align: center;
			font-size: 3rem;
			color:#408040;
			font-weight: bold;
			/*-webkit-text-stroke: 2px #FFF; 白抜き文字はもっと大きい文字が必要なのでヤメ
			text-stroke: 1px #FFF;*/
			text-shadow: 1px 1px 0 #333;
		}
		.calender_link {
			display:static;
			width:30%;
			text-align: center;
		}
		.calender {
			padding:10px;
			font-size:1.2rem;
		}
		.calender th,td {
			border:2px solid #408040;
		}		
        .calender th {
            height: 30px;
			width: 8rem;
            text-align: center;
        }
        .calender td {
            height: 6rem;
			vertical-align: top;
        }
        .area {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }
        .day {
			width: 3rem;
            text-align: center;
			font-size:1.2rem;
            background: rgb(157, 237, 200);
        }
        .cnt {
			width: 2.5rem;
            text-align: center;
			font-size:1rem;
            background: rgb(232, 206, 224);
        }
        .cnt::before {
            content: "残";
            font-size:0.5rem;
        }
        .names {
			font-size:0.6rem;
        }
        .calender th:nth-of-type(1), td:nth-of-type(1) {
			background: #fee;
            color: red;
        }
        .calender th:nth-of-type(7), td:nth-of-type(7) {
			background: #eef;
            color: blue;
        }
        .today {
            background: orange !important;
        }

	</style>    
</head>
